<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">


    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offline_switch" />

    <TextView
        style="@style/OrangeText"
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="24sp"
        android:text="Session settings"
        app:layout_constraintStart_toStartOf="@+id/offline_switch"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        style="@style/OrangeText"
        android:id="@+id/offline_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:text="Offline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4" />

    <TextView
        style="@style/OrangeText"
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Main settings"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/offline_switch"
        app:layout_constraintStart_toStartOf="@+id/offline_switch"
        app:layout_constraintTop_toBottomOf="@+id/view4"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView6"
        style="@style/OrangeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maximum vocables:"
        app:layout_constraintBottom_toBottomOf="@+id/maximum_vocable_count_editText"
        app:layout_constraintStart_toStartOf="@+id/textView4" />

    <TextView
        style="@style/OrangeText"
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of repetitions:"
        app:layout_constraintBottom_toBottomOf="@+id/number_of_repetitions_editText"
        app:layout_constraintStart_toStartOf="@+id/textView6" />

    <EditText
        style="@style/OrangeText"
        android:id="@+id/maximum_vocable_count_editText"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/number_of_repetitions_editText"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        style="@style/OrangeText"
        android:id="@+id/number_of_repetitions_editText"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="number"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/maximum_vocable_count_editText" />

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

</androidx.constraintlayout.widget.ConstraintLayout>