<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">


    <EditText
        android:id="@+id/settings_maximum_vocables_per_page_editText"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:inputType="numberSigned"
        android:textColor="@color/colorOrange"
        app:layout_constraintStart_toStartOf="@+id/settings_maximum_vocable_count_in_lesson_editText"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <View
        android:id="@+id/view"
        style="@style/OrangeText"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setting_writing_type_checkBox" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_maximum_vocables_per_page_editText" />

    <TextView
        android:id="@+id/textView4"
        style="@style/OrangeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Session settings"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        style="@style/OrangeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:text="Main settings"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4" />

    <TextView
        android:id="@+id/textView6"
        style="@style/OrangeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maximum vocables:"
        app:layout_constraintBottom_toBottomOf="@+id/settings_maximum_vocable_count_in_lesson_editText"
        app:layout_constraintStart_toStartOf="@+id/textView4" />

    <TextView
        style="@style/OrangeText"
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of repetitions:"
        app:layout_constraintBottom_toBottomOf="@+id/settings_number_of_repetitions_editText"
        app:layout_constraintStart_toStartOf="@+id/textView6" />

    <EditText
        android:id="@+id/settings_maximum_vocable_count_in_lesson_editText"
        style="@style/OrangeText"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginTop="14dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/settings_number_of_repetitions_editText"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/settings_number_of_repetitions_editText"
        style="@style/OrangeText"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/setting_alternative_type_checkBox"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/settings_maximum_vocable_count_in_lesson_editText" />

    <CheckBox
        android:id="@+id/setting_standard_type_checkBox"
        style="@style/OrangeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Source language to target language"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <CheckBox
        style="@style/OrangeText"

        android:id="@+id/setting_alternative_type_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Target language to source language"
        app:layout_constraintStart_toStartOf="@+id/setting_standard_type_checkBox"
        app:layout_constraintTop_toBottomOf="@+id/setting_standard_type_checkBox" />

    <CheckBox
        android:id="@+id/setting_writing_type_checkBox"

        style="@style/OrangeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Write out the word"
        app:layout_constraintStart_toStartOf="@+id/setting_alternative_type_checkBox"
        app:layout_constraintTop_toBottomOf="@+id/setting_alternative_type_checkBox" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Maximum vocabulary per page"
        android:textColor="@color/colorOrange"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Maximum lessons per page"
        android:textColor="@color/colorOrange"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/settings_maximum_lesson_per_page_editText"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:inputType="numberSigned"
        android:textColor="@color/colorOrange"
        app:layout_constraintStart_toStartOf="@+id/settings_maximum_vocable_count_in_lesson_editText"
        app:layout_constraintTop_toTopOf="@+id/textView10" />

</androidx.constraintlayout.widget.ConstraintLayout>