<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Profile name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/profile_name_editText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:autofillHints=""
        android:inputType="text"
        android:text="Enter a name for a new profile"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="@+id/textView9" />

    <Button
        android:id="@+id/profile_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="@android:string/cancel"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/profile_self_controlled" />

    <Button
        android:id="@+id/profile_ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="@string/ok"
        app:layout_constraintEnd_toEndOf="@+id/profile_name_editText"
        app:layout_constraintTop_toBottomOf="@+id/profile_self_controlled" />

    <CheckBox
        android:id="@+id/profile_self_controlled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="self-controlled "
        app:layout_constraintStart_toStartOf="@+id/profile_name_editText"
        app:layout_constraintTop_toBottomOf="@+id/profile_name_editText" />
</androidx.constraintlayout.widget.ConstraintLayout>